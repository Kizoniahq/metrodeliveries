
<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :payment_method %>
    <%= f.input :order_id %>
    <%= f.input :user_id %>
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
